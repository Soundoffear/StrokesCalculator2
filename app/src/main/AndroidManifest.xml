<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oilfieldapps.allspark.strokescalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PumpOutput"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".menus.PumpOutputMenu" />
        <activity
            android:name=".SandV_Free"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".SandV_Free_results"
            android:parentActivityName=".SandV_Free">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SandV_Free" />
        </activity>
        <activity android:name=".menus.SNV_Menu" />
        <activity
            android:name=".AnnularVelocity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".menus.AV_Menu" />
        <activity
            android:name=".Tanks_Volume"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".menus.TankVol_Menu" />
        <activity android:name=".SNV_HowToActivity"></activity>
    </application>

</manifest>