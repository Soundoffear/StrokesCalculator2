<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="@dimen/paddingAround"
    android:layout_gravity="center_horizontal">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/itemNameLV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/generalTextSize"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_columnSpan="3"
            android:layout_column="0"
            android:layout_row="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inner_diameter"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize"
            android:layout_column="0"
            android:layout_row="1"
            android:padding="2dp"/>
        <TextView
            android:id="@+id/input_ID_LV_ET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/listViewTextSize"
            android:textColor="@color/textColor"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:ems="5"
            android:layout_column="1"
            android:layout_row="1"
            android:padding="2dp"/>
        <TextView
            android:id="@+id/input_ID_LV_TV_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in"
            android:textSize="@dimen/listViewTextSize"
            android:textColor="@color/textColor"
            android:layout_column="2"
            android:layout_row="1"
            android:padding="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/outer_diameter"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize"
            android:layout_column="0"
            android:layout_row="2"
            android:padding="2dp"/>
        <TextView
            android:id="@+id/input_OD_LV_ET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/listViewTextSize"
            android:textColor="@color/textColor"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:ems="5"
            android:layout_column="1"
            android:layout_row="2"
            android:padding="2dp"/>
        <TextView
            android:id="@+id/input_OD_LV_ET_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in"
            android:textSize="@dimen/listViewTextSize"
            android:textColor="@color/textColor"
            android:layout_column="2"
            android:layout_row="2"
            android:padding="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/top_md"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize"
            android:layout_column="0"
            android:layout_row="3"
            android:padding="2dp"/>
        <TextView
            android:id="@+id/input_top_md_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/listViewTextSize"
            android:textColor="@color/textColor"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:ems="5"
            android:layout_column="1"
            android:layout_row="3"
            android:padding="2dp"/>
        <TextView
            android:id="@+id/input_top_md_TV_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m"
            android:textSize="@dimen/listViewTextSize"
            android:textColor="@color/textColor"
            android:layout_column="2"
            android:layout_row="3"
            android:padding="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_md"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize"
            android:layout_column="0"
            android:layout_row="4"
            android:padding="2dp"/>
        <TextView
            android:id="@+id/input_end_md_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/listViewTextSize"
            android:textColor="@color/textColor"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:ems="5"
            android:layout_column="1"
            android:layout_row="4"
            android:padding="2dp"/>
        <TextView
            android:id="@+id/input_end_md_TV_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m"
            android:textSize="@dimen/listViewTextSize"
            android:textColor="@color/textColor"
            android:layout_column="2"
            android:layout_row="4"
            android:padding="2dp"/>
    </GridLayout>


</LinearLayout>