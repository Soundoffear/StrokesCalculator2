<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorPrimary"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp">

        <TextView
            android:layout_column="0"
            android:layout_gravity="end"
            android:layout_row="0"
            android:padding="@dimen/paddingAround"
            android:text="@string/name"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize" />

        <EditText
            android:id="@+id/drill_string_et_input_name"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_row="0"
            android:ems="5"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="end"
            android:layout_row="1"
            android:padding="@dimen/paddingAround"
            android:text="@string/drill_string_id"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize" />

        <EditText
            android:id="@+id/drill_string_et_input_ds_id"
            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_row="1"
            android:ems="5"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize" />

        <TextView
            android:id="@+id/drill_string_et_input_ds_id_unit"
            android:layout_column="2"
            android:layout_gravity="start"
            android:layout_row="1"
            android:padding="@dimen/paddingAround"
            android:text="@string/in"
            android:textAlignment="textStart"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="end"
            android:layout_row="2"
            android:padding="@dimen/paddingAround"
            android:text="@string/drill_string_od"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize" />

        <EditText
            android:id="@+id/drill_string_et_input_ds_od"
            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_row="2"
            android:ems="5"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize" />

        <TextView
            android:id="@+id/drill_string_et_input_ds_od_unit"
            android:layout_column="2"
            android:layout_gravity="start"
            android:layout_row="2"
            android:padding="@dimen/paddingAround"
            android:text="@string/in"
            android:textAlignment="textStart"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="end"
            android:layout_row="3"
            android:padding="@dimen/paddingAround"
            android:text="@string/drill_string_length"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize" />

        <EditText
            android:id="@+id/drill_string_et_input_ds_length"
            android:layout_column="1"
            android:layout_gravity="end"
            android:layout_row="3"
            android:ems="5"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize" />

        <TextView
            android:id="@+id/drill_string_et_input_ds_length_unit"
            android:layout_column="2"
            android:layout_gravity="start"
            android:layout_row="3"
            android:padding="@dimen/paddingAround"
            android:text="@string/in"
            android:textAlignment="textStart"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize" />

    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/drill_string_add_item_button"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_data"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/drill_string_dismiss_item_button"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dismiss"
            android:textColor="@color/textColor" />
    </LinearLayout>

</LinearLayout>