<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:gravity="center_horizontal"
    android:layout_gravity="center">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/ds_part_name"
            android:textSize="@dimen/listViewTextSize"
            android:textColor="@color/textColor"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="0"
            android:textAlignment="center"
            android:padding="2dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:text="@string/drill_string_id_listview"
            android:textSize="@dimen/listViewTextSize"
            android:textColor="@color/textColor"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:layout_column="0"
            android:layout_row="1"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/drill_string_tv_input_ds_id"
            android:textSize="@dimen/listViewTextSize"
            android:textColor="@color/textColor"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:ems="5"
            android:layout_column="1"
            android:layout_row="1"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/drill_string_tv_input_ds_id_unit"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize"
            android:layout_column="2"
            android:layout_row="1"
            android:text="@string/in"
            android:padding="2dp"/>

        <TextView
            android:text="@string/drill_string_od_listview"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textSize="@dimen/listViewTextSize"
            android:textColor="@color/textColor"
            android:layout_column="0"
            android:layout_row="2"/>

        <TextView
            android:id="@+id/drill_string_tv_input_ds_od"
            android:textSize="@dimen/listViewTextSize"
            android:textColor="@color/textColor"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:ems="5"
            android:layout_column="1"
            android:layout_row="2"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/drill_string_tv_input_ds_od_unit"
            android:textSize="@dimen/listViewTextSize"
            android:textColor="@color/textColor"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:text="@string/in"
            android:layout_column="2"
            android:layout_row="2"
            android:padding="2dp"/>

        <TextView
            android:text="@string/drill_string_length"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textSize="@dimen/listViewTextSize"
            android:textColor="@color/textColor"
            android:layout_column="0"
            android:layout_row="3"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/drill_string_tv_input_ds_length"
            android:textSize="@dimen/listViewTextSize"
            android:textColor="@color/textColor"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:ems="5"
            android:layout_column="1"
            android:layout_row="3"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/drill_string_tv_input_ds_length_unit"
            android:textSize="@dimen/listViewTextSize"
            android:textColor="@color/textColor"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:text="@string/feet"
            android:layout_column="2"
            android:layout_row="3"
            android:padding="2dp"/>

    </GridLayout>

</LinearLayout>