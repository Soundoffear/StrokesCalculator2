<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/ds_part_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:minEms="7"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        tools:text="N N" />

    <TextView
        android:id="@+id/drill_string_tv_input_ds_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/drill_string_id_listview"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        app:layout_constraintRight_toLeftOf="@+id/ds_part_name"
        app:layout_constraintTop_toBottomOf="@+id/ds_part_name" />

    <TextView
        android:id="@+id/drill_string_tv_input_ds_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"
        android:textAlignment="textEnd"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        app:layout_constraintLeft_toRightOf="@+id/drill_string_tv_input_ds_id_label"
        app:layout_constraintRight_toLeftOf="@+id/drill_string_tv_input_ds_id_unit"
        app:layout_constraintTop_toBottomOf="@+id/ds_part_name"
        tools:text="@string/zero" />

    <TextView
        android:id="@+id/drill_string_tv_input_ds_id_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="4dp"
        android:text="@string/in"
        android:textAlignment="textStart"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        app:layout_constraintLeft_toRightOf="@+id/ds_part_name"
        app:layout_constraintTop_toBottomOf="@+id/ds_part_name" />

    <TextView
        android:id="@+id/drill_string_tv_input_ds_od_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"
        android:text="@string/drill_string_od_listview"
        android:textAlignment="textEnd"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        app:layout_constraintRight_toLeftOf="@+id/ds_part_name"
        app:layout_constraintTop_toBottomOf="@+id/drill_string_tv_input_ds_id_label" />

    <TextView
        android:id="@+id/drill_string_tv_input_ds_od"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        app:layout_constraintLeft_toRightOf="@+id/drill_string_tv_input_ds_od_label"
        app:layout_constraintRight_toLeftOf="@id/drill_string_tv_input_ds_od_unit"
        app:layout_constraintTop_toBottomOf="@+id/drill_string_tv_input_ds_id_label"
        tools:text="@string/zero" />

    <TextView
        android:id="@+id/drill_string_tv_input_ds_od_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="4dp"
        android:text="@string/in"
        android:textAlignment="textStart"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        app:layout_constraintLeft_toRightOf="@+id/ds_part_name"
        app:layout_constraintTop_toBottomOf="@+id/drill_string_tv_input_ds_id_label" />

    <TextView
        android:id="@+id/drill_string_tv_input_ds_length_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"
        android:text="@string/drill_string_length"
        android:textAlignment="textEnd"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        app:layout_constraintRight_toLeftOf="@+id/ds_part_name"
        app:layout_constraintTop_toBottomOf="@+id/drill_string_tv_input_ds_od_label" />

    <TextView
        android:id="@+id/drill_string_tv_input_ds_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        app:layout_constraintLeft_toRightOf="@+id/drill_string_tv_input_ds_length_label"
        app:layout_constraintRight_toLeftOf="@+id/drill_string_tv_input_ds_length_unit"
        app:layout_constraintTop_toBottomOf="@+id/drill_string_tv_input_ds_od_label"
        tools:text="@string/zero" />

    <TextView
        android:id="@+id/drill_string_tv_input_ds_length_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/feet"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        app:layout_constraintLeft_toRightOf="@+id/ds_part_name"
        app:layout_constraintTop_toBottomOf="@+id/drill_string_tv_input_ds_od_label" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/drill_string_tv_input_ds_length_label" />

</android.support.constraint.ConstraintLayout>