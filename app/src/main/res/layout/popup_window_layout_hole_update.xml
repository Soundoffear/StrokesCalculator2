<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:textAlignment="center"
            android:text="@string/enter_name"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize"/>

        <EditText
            android:id="@+id/input_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:ems="5"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:inputType="text"
            android:textSize="@dimen/listViewTextSize"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:textAlignment="center"
            android:text="@string/inner_diameter"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize"/>

        <EditText
            android:id="@+id/input_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:ems="5"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:inputType="numberDecimal"
            android:textSize="@dimen/listViewTextSize"/>

        <TextView
            android:id="@+id/input_ID_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:text="@string/in"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:textAlignment="center"
            android:text="@string/outer_diameter"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize" />

        <EditText
            android:id="@+id/input_OD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:ems="5"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:inputType="numberDecimal"
            android:textSize="@dimen/listViewTextSize" />

        <TextView
            android:id="@+id/input_OD_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:text="@string/in"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/top_md"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize" />

        <EditText
            android:id="@+id/input_top_md"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:ems="5"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:inputType="numberDecimal"
            android:textSize="@dimen/listViewTextSize" />

        <TextView
            android:id="@+id/input_top_md_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:text="@string/m"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/end_md"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize" />

        <EditText
            android:id="@+id/input_end_md"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:ems="5"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:inputType="numberDecimal"
            android:textSize="@dimen/listViewTextSize" />

        <TextView
            android:id="@+id/input_end_md_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="4"
            android:text="@string/m"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/listViewTextSize" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center">
            <Button
                android:id="@+id/add_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/update_data"
                android:textColor="@color/textColor"
                android:textSize="@dimen/listViewTextSize"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/dismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dismiss"
                android:textColor="@color/textColor"
                android:textSize="@dimen/listViewTextSize"
                style="?android:attr/buttonBarButtonStyle"/>

        </LinearLayout>

    </GridLayout>

</LinearLayout>