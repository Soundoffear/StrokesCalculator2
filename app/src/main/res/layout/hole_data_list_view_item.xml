<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">


    <TextView
        android:id="@+id/itemNameLV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:minEms="7"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/name" />

    <TextView
        android:id="@+id/input_ID_LV_TV_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/inner_diameter"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        app:layout_constraintRight_toLeftOf="@+id/itemNameLV"
        app:layout_constraintTop_toBottomOf="@+id/itemNameLV" />

    <TextView
        android:id="@+id/input_ID_LV_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/zero"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        app:layout_constraintLeft_toRightOf="@+id/input_ID_LV_TV_label"
        app:layout_constraintRight_toLeftOf="@+id/input_ID_LV_TV_units"
        app:layout_constraintTop_toBottomOf="@+id/itemNameLV" />

    <TextView
        android:id="@+id/input_ID_LV_TV_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/in"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        app:layout_constraintLeft_toRightOf="@+id/itemNameLV"
        app:layout_constraintTop_toBottomOf="@+id/itemNameLV" />

    <TextView
        android:id="@+id/input_OD_LV_ET_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/outer_diameter"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        app:layout_constraintRight_toLeftOf="@+id/itemNameLV"
        app:layout_constraintTop_toBottomOf="@+id/input_ID_LV_TV_label" />

    <TextView
        android:id="@+id/input_OD_LV_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/zero"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        app:layout_constraintLeft_toRightOf="@+id/input_OD_LV_ET_label"
        app:layout_constraintRight_toLeftOf="@+id/input_OD_LV_ET_units"
        app:layout_constraintTop_toBottomOf="@id/input_ID_LV_TV_label" />

    <TextView
        android:id="@+id/input_OD_LV_ET_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/in"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        app:layout_constraintLeft_toRightOf="@+id/itemNameLV"
        app:layout_constraintTop_toBottomOf="@+id/input_ID_LV_TV_label" />

    <TextView
        android:id="@+id/input_top_md_TV_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/top_md"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        app:layout_constraintRight_toLeftOf="@+id/itemNameLV"
        app:layout_constraintTop_toBottomOf="@+id/input_OD_LV_ET_label" />

    <TextView
        android:id="@+id/input_top_md_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        app:layout_constraintLeft_toRightOf="@+id/input_top_md_TV_label"
        app:layout_constraintRight_toLeftOf="@+id/input_top_md_TV_units"
        app:layout_constraintTop_toBottomOf="@+id/input_OD_LV_ET_label"
        tools:text="@string/zero" />

    <TextView
        android:id="@+id/input_top_md_TV_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/m"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        app:layout_constraintLeft_toRightOf="@+id/itemNameLV"
        app:layout_constraintTop_toBottomOf="@+id/input_OD_LV_ET_label" />

    <TextView
        android:id="@+id/input_end_md_TV_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/end_md"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        app:layout_constraintRight_toLeftOf="@+id/itemNameLV"
        app:layout_constraintTop_toBottomOf="@+id/input_top_md_TV_label" />

    <TextView
        android:id="@+id/input_end_md_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/zero"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        app:layout_constraintLeft_toRightOf="@+id/input_end_md_TV_label"
        app:layout_constraintRight_toLeftOf="@+id/input_end_md_TV_units"
        app:layout_constraintTop_toBottomOf="@+id/input_top_md_TV_label" />

    <TextView
        android:id="@+id/input_end_md_TV_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/m"
        android:textColor="@color/textColor"
        android:textSize="@dimen/listViewTextSize"
        app:layout_constraintLeft_toRightOf="@+id/itemNameLV"
        app:layout_constraintTop_toBottomOf="@+id/input_top_md_TV_label" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/input_end_md_TV_label" />

</android.support.constraint.ConstraintLayout>